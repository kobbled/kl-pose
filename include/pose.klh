-- use array
declare_function(prog_name,set_jointpos,prog_name_alias,setjnt)
ROUTINE pose__set_jointpos(arr: ARRAY[*] OF REAL) : JOINTPOS FROM pose
-- update single axis
declare_function(prog_name,set_jointpos_axis,prog_name_alias,setajnt)
